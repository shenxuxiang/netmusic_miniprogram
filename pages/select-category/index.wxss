.select-category-modal {
  width: 100vw;
  background: #fff;
}
.category-x {
  width: 100%;
  margin-top: 20rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
}
.category-title {
  line-height: 64rpx;
  font-size: 32rpx;
  color: black;
  font-weight: bold;
  text-align: center;
}
.sub-category {
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-content: flex-start;
}
.sub-category-item {
  width: 25%;
  margin-top: 10rpx;
  padding: 20rpx 10rpx;
  text-align: center;
  line-height: 1.5;
  font-size: 28rpx;
  color: #333;
  border: 1px solid #ddd;
  box-sizing: border-box;
  transition: all 300ms ease;
}
.sub-category-item:nth-child(4n+1) {
  border-right-width: 0;
}
.sub-category-item:nth-child(4n+2) {
  border-right-width: 0;
}
.sub-category-item:nth-child(4n+3) {
  border-right-width: 0;
}
.sub-category-item:last-child {
  border-right-width: 1px;
}
.sub-category-item.active {
  background: #f80;
  border-color: #f80;
  color: #fff;
}
.all-category {
  width: calc(100% - 40rpx);
  margin: 20rpx 20rpx;
  padding: 20rpx 10rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  border: 1px solid #ddd;
  box-sizing: border-box;
  transition: all 300ms ease;
}
.all-category.active {
  background: #f80;
  border-color: #f80;
  color: #fff;
}

.button {
  margin: 20px 20rpx;
  padding: 20rpx 0;
  line-height: 1.5;
  font-size: 28rpx;
  text-align: center;
  color: #999;
  border: 1px solid #ddd;
  transition: all 200ms ease;
}
.save-button {
  color: #f80;
  background: #fff;
  border: 1px solid #f80;
}
.button + .button {
  margin-left: 20rpx;
}
.button:active {
  border: 1px solid #f0f0f8;
  color: #d9d9d9;
  background: #f0f0f8;
}
