.loading-x {
  position: fixed;
  top: 400rpx;
  left: 0;
  right: 0;
  margin: auto;
  width: 100rpx;
  height: 20rpx;
  display: flex;
  justify-content: space-around;
}
.loading-1, .loading-2, .loading-3 {
  width: 20rpx;
  height: 20rpx;
  background: #f90;
  border-radius: 10rpx / 10rpx;
}
.loading-1 {
  animation: ani 0.8s ease-in-out alternate infinite;
}
.loading-2 {
  animation: ani 0.8s ease-in-out 0.15s alternate infinite;
}
.loading-3 {
  animation: ani 0.8s ease-in-out 0.3s alternate infinite;
}

@keyframes ani {
  0% {
    transform: scale(0.5);
  }
  50% {
    transform: scale(1);
  }
  100% {
    transform: scale(0.5);
  }
}