.recommend-panel {
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-content: flex-start;
  width: 100%;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.list-item {
  position: relative;
  width: 223.3333rpx;
  margin: 20rpx 10rpx;
}
.list-item-image {
  width: 100%;
  height: 243.3333rpx;
}
.play-count {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  padding: 0 10rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.4);
  box-sizing: border-box;
}
.play-count-image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}
.list-item-title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  line-height: 36rpx;
}