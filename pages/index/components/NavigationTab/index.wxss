.navigation-tab {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  z-index: 2;
}
.navigation-tab-wrapper {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: calc(100% - 40rpx);
  height: 100%;
  margin: 0 20rpx;
  background: #fff;
  box-sizing: border-box;
}
.navigate-tab-item {
  width: 25%;
  text-align: center;
}
.navigate-tab-item.active {
  color: #f80;
}
.indicator {
  position: absolute;
  bottom: 2px;
  left: 0rpx;
  width: 25%;
  height: 2px;
  background: #f80;
  transition: transform ease 300ms;
}
.indicator-0 {
  transform: translateX(0);
}
.indicator-1 {
  transform: translateX(100%);
}
.indicator-2 {
  transform: translateX(200%);
}
.indicator-3 {
  transform: translateX(300%);
}

