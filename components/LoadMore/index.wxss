.load-more {
  width: 100%;
  height: 100rpx;
}
.load-more-loading {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #e6e6e6;
  line-height: 28rpx;
}
.load-more-loading::before, .load-more-loading::after {
  content: '';
  width: 100rpx;
  height: 2rpx;
  margin: 0 30rpx;
  background: #e6e6e6;
}
.loading-label {
  width: 24px;
  height: 16px;
  margin-left: 5px;
  display: flex;
  justify-content: space-around;
}
.block {
  width: 3px;
  height: 16px;
  background: #e6e6e6;
  animation: jump 0.8s ease-in-out alternate infinite;
}
.block-1 {
  animation-delay: 0s;
}
.block-2 {
  animation-delay: 0.15s;
}
.block-3 {
  animation-delay: 0.3s;
}

@keyframes jump {
  0% {
    transform: scaleY(0.5);
  }
  50% {
    transform: scaleY(1);
  }
  100% {
    transform: scaleY(0.5);
  }
}